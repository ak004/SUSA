<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/grey_white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/undraw_education"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WELCOME TO SUSA"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/kaushan_script"
                android:textSize="35dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="your gateway to a world of learning. Discover courses and study resources tailored to empower your educational journey, anytime, anywhere"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/grey"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginHorizontal="30dp"
            android:textAllCaps="false"
            android:padding="18dp"
            android:background="@drawable/round_bottom_nav"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginHorizontal="30dp"
            android:textAllCaps="false"
            android:background="@drawable/round_bottom_nav"
            android:backgroundTint="@color/grey"
            android:padding="18dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>




    </LinearLayout>

</LinearLayout>