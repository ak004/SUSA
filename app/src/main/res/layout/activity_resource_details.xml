<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_white"
    android:orientation="vertical"
    tools:context=".ResourceDetails"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:rotation="180"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resource Detail"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/mentore_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/programmng_cat_2"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Seller"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_download_24"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            />



        <TextView
            android:id="@+id/views_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:layout_gravity="center"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bottom_nav"
            android:text="pdf"
            android:paddingHorizontal="15dp"
            android:backgroundTint="@color/red"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>








    </LinearLayout>


    <TextView
        android:id="@+id/Title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Design UI/UX"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginHorizontal="20dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="username goes here"
        android:fontFamily="@font/roboto"
        android:textColor="@color/grey"
        android:gravity="start"/>
    <TextView
        android:id="@+id/discrepition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus et ipsum massa. Quisque vel molestie elit, sit amet dapibus neque. Cras sapien ex, facilisis eu ultrices sit amet, eleifend vel massa. Phasellus metus tellus, feugiat eget ipsum ut, facilisis vestibulum arcu. Ut venenatis urna et nisi lobortis semper. Donec imperdiet sem sit amet convallis bibendum. Aliquam varius ligula velit"
        android:layout_margin="20dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/grey"
        android:gravity="start"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enroll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download "
        android:background="@drawable/round_bottom_nav"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:backgroundTint="@color/colorPrimaryDark"
        />


</LinearLayout>