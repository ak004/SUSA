<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_white"
    android:orientation="vertical"
    tools:context=".chatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:rotation="180"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/vid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ustad AI"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/vid_men"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/programmng_cat_2"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>



    </LinearLayout>






    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mesg_rec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bottom_nav"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/question_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="Ask any quesetion you have "
            android:fontFamily="@font/roboto"
            android:padding="20dp"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:background="@null"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/send_icon"
                android:layout_margin="7dp"
               />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>