<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseDetailActivity"
    android:background="@color/grey_white"
    android:orientation="vertical"
    >


    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:rotation="180"
            android:layout_gravity="center"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Detail"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/mentore_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/programmng_cat_2"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginHorizontal="20dp"
                >

                <ImageView
                    android:id="@+id/image_v1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/design_cat"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Seller"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"/>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_people_24"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/views_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:layout_gravity="center"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/baseline_star_rate_24"
                    android:layout_gravity="center"
                    app:tint="@color/yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="5.0"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/cours_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="$ 99.0"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/Title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Design UI/UX"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginHorizontal="20dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/discrepition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus et ipsum massa. Quisque vel molestie elit, sit amet dapibus neque. Cras sapien ex, facilisis eu ultrices sit amet, eleifend vel massa. Phasellus metus tellus, feugiat eget ipsum ut, facilisis vestibulum arcu. Ut venenatis urna et nisi lobortis semper. Donec imperdiet sem sit amet convallis bibendum. Aliquam varius ligula velit"
                android:layout_margin="20dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/grey"
                android:gravity="start"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Course Includes"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginHorizontal="20dp"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/contact_us_icon"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/hourse_of"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 hours of videos"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/contact_us_icon"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/no_of_lessions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total 30 lesson"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/contact_us_icon"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/num_resoursces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 download Resources"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Similar Courses"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/similar_courese_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/enroll_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_round_boders"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continue_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Continue"
            android:background="@drawable/round_bottom_nav"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:backgroundTint="@color/colorPrimaryDark"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/enroll_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Enroll Now"
            android:background="@drawable/round_bottom_nav"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:backgroundTint="@color/colorPrimaryDark"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"
            >
            <ImageView
                android:id="@+id/bookmark_svgs"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bookmark_svg"
                android:layout_margin="10dp"
                android:tag="bookmark_border"
                />


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>