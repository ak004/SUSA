<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/course_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        >
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dim_linear"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/marketing_cat" />
                <View
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:background="@drawable/dim_linear" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_bottom_nav"
                    android:text="Desgin"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@color/white"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"/>


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_bookmark_border_24"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    app:tint="@color/white" />

            </FrameLayout>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UI/UX Design  "
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:layout_gravity="center"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By owner name goes here and breal"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:layout_gravity="center"
        android:gravity="center"/>
</LinearLayout>