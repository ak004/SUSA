<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Confirmation"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/pay_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to buy this course for 20$ ? before you processed with this payment please read our policy to course payments "
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/no_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:layout_weight="1"
                android:background="@drawable/round_bottom_nav"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/red"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/yes_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:layout_weight="1"
                android:background="@drawable/round_bottom_nav"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/colorPrimaryDark"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>